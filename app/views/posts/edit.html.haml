.header
  .header__header-bar
    .header__header-bar__title
      = link_to posts_path, class: "btn-root" do
        Matching Baseball
    .header__header-bar__box
      .header__header-bar__box__post
        = link_to new_post_path, class: "btn-post" do
          募集する
      .header__header-bar__box__user
        = link_to user_path(current_user), class: "btn-edit" do
          = current_user.name

.header-title
  = icon('fas', 'pen')
  募集情報の編集

.content
  = form_with(model: @post, local: true) do |form|
    .content__title
      タイトル
      = form.text_field :title, placeholder: "タイトル 40文字以内" , rows: "40", class: 'title-box'
    .content__date
      開催日
      = form.date_field :date, placeholder: "", class: 'date-box'
    .content__area
      エリア
      .area-box
        = form.select :area_id, [ ["北海道"], ["青森県"], ["岩手県"], ["宮城県"], ["秋田県"], ["山形県"], ["福島県"], ["茨城県"], ["栃木県"] ,["群馬県"], ["埼玉県"], ["千葉県"], ["東京都"], ["神奈川県"] ,["新潟県"], ["富山県"], ["石川県"], ["福島県"], ["山梨県"] ,["長野県"], ["岐阜県"], ["静岡県"], ["愛知県"], ["三重県"] ,["滋賀県"], ["京都府"], ["大阪府"], ["兵庫県"], ["奈良県"] ,["和歌山県"], ["鳥取県"], ["島根県"], ["岡山県"], ["広島県"], ["山口県"] ,["徳島県"], ["香川県"], ["愛媛県"], ["高知県"], ["福岡県"] ,["佐賀県"], ["長崎県"], ["熊本県"], ["大分県"], ["宮崎県"] ,["鹿児島県"], ["沖縄県"] ], prompt: "選択してください"
    .content__place
      住所     
      = form.text_field :postal, placeholder: "郵便番号", class: 'postal-box'
      = form.text_field :place, placeholder: "住所", class: 'place-box'
    .content__venue
      会場名
      = form.text_field :venue, placeholder: "会場名", class: 'venue-box'
    .content__capacity
      定員
      = form.number_field :capacity, placeholder: "選択", class: 'capacity-box'
    .content__remarks
      備考
      = form.text_area :remarks, placeholder: "備考を入力して下さい" , rows: "1000", class: 'remarks-box'
    .content__upload
      = form.submit :編集する, class: 'upload-box'
      .content__upload__destroy
        = link_to "/posts/#{@post.id}", method: :delete do
          = icon('fa', 'trash')


= render "footer"